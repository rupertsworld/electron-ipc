{
  "name": "@rupertsworld/electron-ipc",
  "version": "0.2.0",
  "description": "Typed, service-oriented IPC for Electron applications.",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js",
      "require": "./dist/cjs/renderer.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json && node ./scripts/prepare-cjs.mjs",
    "copy:preload": "node ./scripts/copy-preload.mjs",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run copy:preload",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:all": "ELECTRON_E2E=1 vitest run",
    "test:watch": "vitest",
    "test:electron": "ELECTRON_E2E=1 vitest run tests/electron-process.integration.test.ts",
    "prepublishOnly": "npm run type-check && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "electron": "^37.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
